<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/building"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <ScrollView
        android:id="@+id/scrollViewRegStep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLogin"
        android:layout_below="@+id/textViewForgetPasswordLabel"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewSecurityQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:text="Your security question"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5d5c5c" />

            <EditText
                android:id="@+id/editTextSecurityQue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:ems="10"
                android:inputType="none"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/textViewUserAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:text="Answer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5d5c5c" />

            <EditText
                android:id="@+id/editTextAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:padding="5sp"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/textViewNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="25dp"
                android:text="New Password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5d5c5c"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonResetPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/btnbg"
                android:ems="10"
                android:text="SUBMIT"
                android:textColor="@drawable/btn_text_color" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageViewSmartFlatLogo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_smartflat" />

</RelativeLayout>