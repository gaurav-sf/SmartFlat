<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="SmartFlat"
        android:textColor="@color/theme_color"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollViewRegStep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppName"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewOwnerCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Society Code"
                android:textColor="#5d5c5c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextOwnerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Society Code"
                android:padding="10sp"
                android:text="SF@GRS1009"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <TextView
                android:id="@+id/textViewUserNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Username"
                android:textColor="#5d5c5c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="User Id"
                android:padding="10sp"
                android:text="rajeAlpha6@6006"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <TextView
                android:id="@+id/textViewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textColor="#5d5c5c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/trans_edittext_bg"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:text="raje"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color" />

            <TextView
                android:id="@+id/textViewLoginAsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Login as"
                android:textColor="#5d5c5c"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/RadioGroupUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/trans_edittext_bg"
                android:orientation="horizontal"
                android:padding="5dp" >

                <RadioButton
                    android:id="@+id/radioButtonOwner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:button="@drawable/custom_radio_button"
                    android:checked="true"
                    android:text="Owner"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radioButtonFamilyMember"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:button="@drawable/custom_radio_button"
                    android:text="Family Member"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radioButtonTenant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:button="@drawable/custom_radio_button"
                    android:text="Tenant"
                    android:textColor="@color/white" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollViewRegStep2"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnbg"
        android:ems="10"
        android:text="LOGIN"
        android:textColor="@drawable/btn_text_color" />

    <LinearLayout
        android:id="@+id/linearLayoutForForgetSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/forgot_password"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewCreateAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/create_new"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>