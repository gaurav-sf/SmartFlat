<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dip" />
                    <gradient
                        android:startColor="#33000000"
                        android:endColor="#33000000"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#999696" />
                    
                    <padding
                        android:left="3dp"
                        android:top="5dp"
                        android:right="3dp"
                        android:bottom="3dp" />
                </shape>
            </item>
            <item
                android:top="10dp"
                android:right="15dp">
                <bitmap android:src="@drawable/down_arrow"
                        android:gravity="top|right" />
            </item>
        </layer-list>
    </item>
</selector>